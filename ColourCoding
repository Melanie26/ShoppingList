				<s:GridColumn dataField="sodium" headerText="sodium"></s:GridColumn>
			</s:ArrayList>
		</s:columns>
		<s:AsyncListView list="{TypeUtility.convertToCollection(getAllFoodnutritionResult.lastResult)}"/>
		
	</s:DataGrid>
</s:Application>
